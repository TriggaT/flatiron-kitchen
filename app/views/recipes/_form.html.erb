<%= form_for @recipe do |f| %>
<%= f.label :name %>
<%= f.text_field :name %> <br>
<%= f.label "Ingredients" %>
<%= f.collection_check_boxes :ingredient_ids, Ingredient.all, :id, :name %> <br>
<%= f.label "New Ingredient" %>
<%= f.fields_for :ingredients, Ingredient.new do |permision_fields| %>
    <%= permision_fields.text_field :name %>
  <% end %>
<%= f.submit %> <br>
<% end %> <br>

